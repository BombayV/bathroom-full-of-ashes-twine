<<script>>
// Load background image with fallback paths
setTimeout(() => {
  const backgroundImg = document.getElementById('background-image');
  if (backgroundImg) {
    const possiblePaths = [
      'assets/images/background.jpg',
      './assets/images/background.jpg',
      '/assets/images/background.jpg'
    ];
    
    const testBackgroundPath = (path, index = 0) => {
      if (index >= possiblePaths.length) {
        console.error('Could not load background image from any path');
        return;
      }
      
      const testImg = new Image();
      testImg.onload = () => {
        backgroundImg.src = path;
        console.log('Background image loaded successfully from:', path);
      };
      testImg.onerror = () => {
        console.log('Failed to load background from:', path);
        testBackgroundPath(possiblePaths[index + 1], index + 1);
      };
      testImg.src = path;
    };
    
    testBackgroundPath(possiblePaths[0]);
  }
}, 10);

const toggleFullscreen = () => {
  if (!document.fullscreenElement) {
    document.documentElement.requestFullscreen();
  } else {
    if (document.exitFullscreen) {
      document.exitFullscreen();
    }
  }
};

setTimeout(() => {
  const fsButton = document.getElementById('fullscreen-button');
  const dialog = document.querySelector('dialog');
  fsButton?.addEventListener('click', toggleFullscreen);
  dialog?.showModal();
}, 100);

<</script>>