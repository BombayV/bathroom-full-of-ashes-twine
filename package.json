{
  "name": "the-bathroom-full-of-ashes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:story": "bun run build:story && bun run watch:story & bun run dev",
    "build": "vite build && bun run build:story-prod",
    "build:story": "tweego src/story -o index.html",
    "build:story-prod": "tweego src/story -o dist/story.html && cp dist/story.html dist/index.html",
    "watch:story": "tweego src/story -o index.html --watch",
    "preview": "vite preview",
    "format": "bun x prettier --write ."
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "tailwindcss": "^4.1.14"
  }
}
